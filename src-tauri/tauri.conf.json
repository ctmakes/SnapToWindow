{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SnapToWindow",
  "version": "0.1.7",
  "identifier": "com.snaptowindow.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "SnapToWindow",
        "width": 680,
        "height": 500,
        "resizable": true,
        "visible": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": ["icons/tray@2x.png", "icons/icon.icns", "icons/icon.ico"]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDhEMjM4NEM0NTI4RUMyMTgKUldRWXdvNVN4SVFqamFvejYrZ0dJUjd0TlNPSzlTZHQySWlKYlZEd0haL1RBakxUYnJGZkYrdnIK",
      "endpoints": [
        "https://github.com/ctmakes/SnapToWindow/releases/latest/download/latest.json"
      ]
    }
  }
}
